{
  "name": "thirdweb-snippets",
  "displayName": "Thirdweb Snippets",
  "description": "This is an extension for Thirdweb Snippets with Typescript support as well!",
  "version": "0.1.0",
  "publisher": "AvneeshAgarwal",
  "repository": {
    "url": "https://github.com/avneesh0612/thirdweb-snippets"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "scripts": {
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "format": "prettier --write .",
    "genReadme": "node scripts/generateReadme.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "pre-commit": "yarn genReadme && yarn format && git add -A ."
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:thirdweb.helloWorld"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "thirdweb.helloWorld",
        "title": "Hello World"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/bundle-collection.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/bundle-collection.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/token.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/token.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/nft-collection.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/nft-collection.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/vote-collection.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/vote-collection.json"
      }
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "markdown-table": "2.0.0",
    "mongoose": "^6.2.6",
    "vscode": "^1.1.37"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.65.0",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
